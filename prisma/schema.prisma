
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model User {
  id        String   @id @unique
  email     String   
  firstName String
  lastName  String
  profileImage String
  Product  Product[]
  favorites Favorite[]

}

model Product{
  id String @id @default(uuid())
  name String
  description Json
  price Int
  images String[]
  smallDescription String
  productFile String
  createdAt DateTime @default(now())
  category CategoryTypes
  User User @relation(fields: [userId], references: [id])
  userId String
}
model Animal {
  id     String   @id @default(uuid())
  name   String
  favorite Favorite[]
}

model Favorite {
  id      String @id @default(uuid())
  userId  String
  animalId String
  user    User   @relation(fields: [userId], references: [id])
  favoriteAnimal  Animal @relation(fields: [animalId], references: [id])
}
enum CategoryTypes{
  template
  uiKit
  icon
}